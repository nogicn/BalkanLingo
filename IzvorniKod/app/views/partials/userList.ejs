<div id="words" style="all: unset; display: contents">
  <% for (let i = 0; i < users.length; i++) { %>
  <div class="word-add">
    <div class="actual-word"><%= users[i].email %></div>
    <div class="word-buttons">
        <% if(users[i].is_admin) { %>
        <img
          class="add-button"
          src="/images/black-remove.png"
          alt=""
          type="checkbox"
          name="users"
          hx-post="/user/setAdmin/<%= users[i].id %>"
          hx-trigger="click"
          hx-target="this"
          hx-swap="outerHTML"
        />
        <% } else{ %>
        <img
          class="add-button"
          src="/images/black-add.png"
          alt=""
          type="checkbox"
          name="users"
          hx-post="/user/setAdmin/<%= users[i].id %>"
          hx-trigger="click"
          hx-target="this"
          hx-swap="outerHTML"
        />
        <% } %>
    </div>
  </div>
  <% } %>
</div>
