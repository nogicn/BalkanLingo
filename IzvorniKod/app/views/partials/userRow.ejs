<% if(users.is_admin) { %>
    <img
      class="add-button"
      src="/images/black-remove.png"
      alt=""
      type="checkbox"
      name="users"
      hx-post="/user/setAdmin/<%= users.id %>"
      hx-trigger="click"
      hx-target="this"
      hx-swap="outerHTML"
    />
    <% } else{ %>
    <img
      class="add-button"
      src="/images/black-add.png"
      alt=""
      type="checkbox"
      name="users"
      hx-post="/user/setAdmin/<%= users.id %>"
      hx-trigger="click"
      hx-target="this"
      hx-swap="outerHTML"
    />
    <% } %>