<div id="words" style="all: unset; display: contents;">
    <% for (let i = 0; i < languages.length; i++) { %>
        <div class="word-add">
            <div class="actual-word"><%= languages[i].name %> </div>
            <div class="word-buttons">
                <a href= <%="/dictionary/editLocale/"+ languages[i].id %> ><img  class="edit-button" src="/images/blue-edit.png" alt=""></a>
                <a href= <%="/dictionary/deleteLocale/"+ languages[i].id %>><img class="add-button" src="/images/black-remove.png" alt=""></a>
            </div>
        </div>
    <% } %>
    </div>